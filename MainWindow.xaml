<Window x:Class="GameBatchExecutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Optimizer" Height="450" Width="600"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Button Style with Animations -->
        <Style TargetType="Button" x:Key="CheatButtonStyle">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.RenderTransform>
                                <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                            </Border.RenderTransform>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#FF4A4A4A" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#FF333333" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style with brighter selected text -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="Purple"/> <!-- Light yellow for better visibility -->
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/> <!-- Slightly larger for visibility -->
            <Setter Property="FontWeight" Value="Bold"/> <!-- Bold for emphasis -->
        </Style>

        <!-- ComboBoxItem Style to ensure visible text in dropdown -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" Background="#FF1E1E1E" BorderThickness="2" CornerRadius="15">
        <Grid>
            <!-- Particles Canvas -->
            <Canvas x:Name="ParticleCanvas" />

            <!-- Title Bar with rounded top -->
            <Border CornerRadius="15,15,0,0" Background="#FF0F0F0F" Height="40" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="KNX" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
                    <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="White" Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="Transparent">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE81123"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content -->
            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Select Game:"/>
                <ComboBox x:Name="GameSelector" Width="300" SelectionChanged="GameSelector_SelectionChanged">
                    <ComboBoxItem Content="Rainbow Six Siege"/>
                    <ComboBoxItem Content="Call of Duty"/>
                </ComboBox>

                <!-- R6S Options -->
                <StackPanel x:Name="R6SOptions" Orientation="Vertical">
                    <TextBlock Text="Optimization Options:"/>
                    <RadioButton x:Name="LegacyRadio" Content="Legacy" Checked="LegacyRadio_Checked"/>
                </StackPanel>

                <!-- COD Options -->
                <StackPanel x:Name="CODOptions" Orientation="Vertical">
                    <TextBlock Text="Script Options:"/>
                    <RadioButton x:Name="CloudPanelRadio" GroupName="CodOptions" Content="CloudPanel" Checked="CloudPanelRadio_Checked"/>
                    <RadioButton x:Name="NewOverlayRadio" GroupName="CodOptions" Content="New Overlay" Checked="NewOverlayRadio_Checked"/>
                </StackPanel>

                <!-- Browser Options for CloudPanel -->
                <StackPanel x:Name="BrowserOptions" Orientation="Vertical">
                    <TextBlock Text="Select Browser:"/>
                    <ComboBox x:Name="BrowserSelector" Width="300" SelectionChanged="BrowserSelector_SelectionChanged">
                        <ComboBoxItem Content="Chrome"/>
                        <ComboBoxItem Content="Opera GX"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="Run" Style="{StaticResource CheatButtonStyle}" Click="RunButton_Click" HorizontalAlignment="Center" Width="120" Height="40"/>

                <TextBlock x:Name="StatusText" Text="" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Reset Button Bottom Right -->
            <Button Content="Reset Optimizations" Style="{StaticResource CheatButtonStyle}" Click="ResetButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="12" Padding="5"/>

            <!-- About Button Bottom Left -->
            <Button Content="About" Style="{StaticResource CheatButtonStyle}" Click="AboutButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="12" Padding="5"/>
        </Grid>
    </Border>

    <!-- Window Load Animation -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
